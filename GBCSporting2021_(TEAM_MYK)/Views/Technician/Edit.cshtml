@model Technician
@{
    ViewBag.Title = "Add/Edit Page";
}

<form asp-controller="Technician" asp-action="Edit" method="post" class="border">
    <div>
        <label asp-for="Name">Name</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" />
        <span asp-validation-for="Phone"></span>
    </div>

    <input type="hidden" asp-for="TechnicianId" />
    <div>
        <button type="submit">@ViewBag.Action</button>
        <a asp-action="List">Cancel</a>
    </div>
</form>
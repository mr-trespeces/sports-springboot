@model Product
@{
    ViewBag.Title = "Add/Edit Page";
}

<form asp-controller="Product" asp-action="Edit" method="post" class="border">
    <div>
        <label asp-for="Code">Code</label>
        <input asp-for="Code" />
    </div>
    <div>
        <label asp-for="Name">Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Price">Price</label>
        <input asp-for="Price" />
    </div>
    <div>
        <label asp-for="ReleaseDate">Released Date</label>
        <input asp-for="ReleaseDate" />
    </div>
    <input type="hidden" asp-for="ProductId" />
    <div>
        <button type="submit">@ViewBag.Action</button>
        <a asp-action="List">Cancel</a>
    </div>
</form>
@model IEnumerable<Product>
@{
    ViewBag.Title = "Product Manager - SportsPro";
}

<a asp-controller="Product" asp-action="Add">Add Product</a>
<table>
    <thead>
        <tr>
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Release Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Product product in Model)
        {
        <tr>
            <td>@product.Code</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@Html.DisplayFor(modelItem => product.ReleaseDate)</td>
            <td>
                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId">Edit</a>
            </td>
            <td>
                <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a asp-controller="Product" asp-action="Add">Add Product</a>
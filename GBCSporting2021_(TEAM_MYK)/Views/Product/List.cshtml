@model IEnumerable<Product>
@{
    ViewBag.Title = "Product Manager - SportsPro";
}
 
<div class="input-group mb-3">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Release Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>@product.Code</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@String.Format("{0:dd/MM/yyyy}", product.ReleaseDate)</td>
                    <td>
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-grid gap-2 d-md-block">
        <a asp-controller="Product" asp-action="Add">
            <button class="btn btn-primary" type="button">Add Product</button>
        </a>
    </div>

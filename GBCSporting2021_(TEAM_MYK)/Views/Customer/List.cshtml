@model IEnumerable<Customer>
@{
    ViewBag.Title = "Customer Manager - SportsPro";
}
<div class="container pb-10">
    <div class="row align-center justify-content-center text-center py-5">
        <div class="col col-12 col-md-8">
            <h2 class="text-dark">Manage Customer</h2>
            <p class="lead font-weight-lighter text-muted">Managing customer you can do everything here!</p>
        </div>
    </div>
    <div class="input-group mb-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">City</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Customer customer in Model)
                {
                <tr>
                    <td>@customer.Firstname @customer.Lastname</td>
                    <td>@customer.Email</td>
                    <td>@customer.City</td>
                    <td>
                        <a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerId">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerId">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    <div class="d-grid gap-2 d-md-block">
            <button asp-controller="Customer" asp-action="Add" class="btn btn-primary" type="button">Add Customer</button>
    </div>
</div>